# Encryption (Generate a secure random key)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Redis Configuration (Optional - for BullMQ/webhooks)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
API_RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
API_RATE_LIMIT_MAX=100        # requests per window
AUTH_RATE_LIMIT_MAX=30        # auth requests per window (updated from 5 to 30)
UPLOAD_RATE_LIMIT_MAX=10      # upload requests per minute
INVITE_RATE_LIMIT_MAX=5       # invite requests per hour

# Security Configuration
AUDIT_LOG_LEVEL=info          # Audit logging level (info, warn, error)
SECURITY_DOMAIN_WHITELIST=""  # Comma-separated list of allowed domains (empty = all allowed)
SECURITY_ENABLE_DOMAIN_VALIDATION=true  # Enable domain validation for org creation